extends layouts/login-layout.pug

block content 
    .loginContainer
        h1 Login
        form(method="post")
            p.errorMessage #{errorMessage}
            input(type="text", name="username", placeholder="Username or email", value=username, required="")
            input(type="password", name="password", placeholder="*********", value=password, required="") 
            input(type="submit", value="Login")
        a(href="/register") Need an account? Register here.